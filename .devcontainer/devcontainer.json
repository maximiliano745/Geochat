{
  "name": "GeoChat Dev Container with Compose",
  "dockerComposeFile": "../docker-compose.yml", // Hace referencia al archivo en la raíz
  "service": "app",                           // Especifica el servicio de la app como el contenedor principal
  "workspaceFolder": "/workspaces/Geochat",
  
  // Las features y comandos se mueven a la configuración de Codespaces
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "forwardPorts": [8080, 5173, 5432],
  
  // Estos comandos se ejecutan en el contenedor 'app' (tu entorno de desarrollo)
  "postCreateCommand": [
    "cd Backend && go mod tidy",
    "cd Frontend && npm install"
  ],
  
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "ms-azuretools.vscode-docker",
        "Vue.volar",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "remoteUser": "vscode"
}